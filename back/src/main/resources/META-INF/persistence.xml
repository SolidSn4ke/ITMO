<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="examplePU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>java:jboss/exampleDS</jta-data-source>
        <class>com.example.back.entities.WorkerEntity</class>
        <class>com.example.back.entities.OrganizationEntity</class>
        <class>com.example.back.entities.PersonEntity</class>
        <class>com.example.back.entities.LocationEntity</class>
        <class>com.example.back.entities.AddressEntity</class>
        <class>com.example.back.entities.CoordinatesEntity</class>
        <class>com.example.back.entities.ImportHistoryEntity</class>
        <properties>

            <property name="eclipselink.target-server" value="WildFly" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />

            <property name="eclipselink.cascade-persist" value="true" />
            <property name="eclipselink.cascade-remove" value="true" />
            <property name="eclipselink.orphan-removal" value="true" />

            <property name="eclipselink.ddl-generation.output-mode" value="database" />
            <property name="eclipselink.deploy-on-startup" value="true" />

            <property name="eclipselink.logging.level" value="FINER" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
        </properties>
    </persistence-unit>
</persistence>