<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="examplePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>com.example.back.model.entities.WorkerEntity</class>
        <class>com.example.back.model.entities.OrganizationEntity</class>
        <class>com.example.back.model.entities.PersonEntity</class>
        <class>com.example.back.model.entities.LocationEntity</class>
        <class>com.example.back.model.entities.AddressEntity</class>
        <class>com.example.back.model.entities.CoordinatesEntity</class>
        <class>com.example.back.model.entities.ImportHistoryEntity</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url"
                value="jdbc:postgresql://localhost:5432/workers" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />

            <property name="eclipselink.target-server" value="WildFly" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />

            <property name="eclipselink.cascade-persist" value="true" />
            <property name="eclipselink.cascade-remove" value="true" />
            <property name="eclipselink.orphan-removal" value="true" />

            <property name="eclipselink.ddl-generation.output-mode" value="database" />
            <property name="eclipselink.deploy-on-startup" value="true" />
            <property name="eclipselink.session.customizer"
                value="com.example.back.config.EclipselinkCustomizer" />

            <property name="eclipselink.logging.level" value="FINER" />
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables" />

            <property name="eclipselink.cache.shared.default" value="true" />
            <property name="eclipselink.cache.type.default" value="Full" />
            <property name="eclipselink.cache.type" value="jakarta.persistence.SharedCacheMode.ALL" />
            <property name="eclipselink.cache.provider"
                value="org.infinispan.jcache.embedded.JCachingProvider" />
            <property name="eclipselink.logging.level.cache" value="FINE" />
            <property name="eclipselink.statistics" value="true" />
            <property name="eclipselink.session-event-listener"
                value="com.example.back.util.listeners.SqlQueryListener" />

        </properties>
    </persistence-unit>
</persistence>